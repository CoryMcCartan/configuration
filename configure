#!/bin/bash
# install command-line tools
xcode-select --install

# get homebrew
ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
brew tap caskroom/cask
brew install brew-cask
brew tap caskroom/versions

# install command-line tools
brew install git
brew install vim
brew install tmux
brew install node
brew install wget
brew install chapel
pip install --user powerline-status
mkdir ~/.fonts_install
curl https://github.com/powerline/fonts/raw/master/Meslo/Meslo%20LG%20S%20DZ%20Regular%20for%20Powerline.otf -o ~/.fonts_install/Meslo.otf
mv ~/.fonts_install/Meslo.otf /Library/Fonts/
rm ~/.fonts_install/

# get files
git clone https://github.com/CoryMcCartan/configuration.git ~/.dotfiles
cd ~/.dotfiles
chmod +x install
./install

# install GUI apps
brew cask install google-chrome
brew cask install gimp
